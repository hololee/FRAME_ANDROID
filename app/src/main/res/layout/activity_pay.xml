    <RelativeLayout
        android:id="@+id/info_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:weightSum="1">


                <TextView
                    android:id="@+id/name_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:text="@string/guide_name"
                    android:textColor="@color/moreMidBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@drawable/rect_line_gray"
                    android:hint="@string/name_text_hint"
                    android:padding="7dp"
                    android:textColor="@color/moreMidBlack"
                    android:textSize="14sp"
                    android:windowSoftInputMode="stateAlwaysHidden" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:weightSum="1">


                <TextView
                    android:id="@+id/phone_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:text="@string/guide_phone"
                    android:textColor="@color/moreMidBlack"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/phone_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@drawable/rect_line_gray"
                    android:hint="@string/phone_text_hint"
                    android:padding="7dp"
                    android:textColor="@color/moreMidBlack"
                    android:textSize="14sp"
                    android:windowSoftInputMode="stateAlwaysHidden" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:weightSum="1">


                <TextView
                    android:id="@+id/address_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:text="@string/guide_address"
                    android:textColor="@color/moreMidBlack"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@drawable/rect_line_gray"
                    android:hint="@string/address_text_hint"
                    android:padding="7dp"
                    android:textColor="@color/moreMidBlack"
                    android:textSize="14sp"
                    android:windowSoftInputMode="stateAlwaysHidden" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/info_box"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/shortGray" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line6"
        android:layout_below="@+id/line3"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:divider="@null"
        android:dividerHeight="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:scrollbars="none" />

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/order_box"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/shortGray" />


    <LinearLayout
        android:id="@+id/order_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line5"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/cards_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:text="@string/cards_text"
                android:textColor="@color/moreDarkBlack"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:text="0"
                android:textColor="@color/moreMidGray"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/delivery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:text="@string/delivery_text"
                android:textColor="@color/moreDarkBlack"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:text="0"
                android:textColor="@color/moreMidGray"
                android:textSize="14sp" />


        </RelativeLayout>

    </LinearLayout>


    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/total_box"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/shortGray" />

    <RelativeLayout
        android:id="@+id/total_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:text="@string/total_text"
            android:textColor="@color/moreDarkBlack"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="16sp" />


    </RelativeLayout>


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/button"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/shortGray" />


    <Button
        android:id='@+id/button'
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/selector_black"
        android:text="@string/pay"
        android:textColor="@color/background"
        android:textSize="18sp" />

</RelativeLayout>